#!/usr/bin/env bash

# Usage: format-haskell [DIR]

set -euo pipefail

cd "$(dirname "${BASH_SOURCE[0]}")/.."

echo "Formatting Cabal"

find amazonka* \
  -type f -name '*.cabal' \
  -exec cabal-fmt --inplace --indent=2 {} \+

echo "Formatting Haskell"

find amazonka* \
  -path ./dist-newstyle -prune -o \
  -type f -name '*.hs' \
  -exec ormolu -i \
  {} \+
