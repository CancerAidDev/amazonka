#!/usr/bin/env bash

# Usage: format-haskell [DIR]

set -euo pipefail

cd "$(dirname "${BASH_SOURCE[0]}")/.."

echo "Formatting Cabal"

find amazonka amazonka-core amazonka-test amazonka-gen \
    -type f -name '*.cabal' \
    -exec cabal-fmt --inplace --indent=2 {} \+

echo "Formatting Haskell"

find amazonka amazonka-core amazonka-test amazonka-gen \
    -path ./dist-newstyle -prune -o \
    -type f -name '*.hs' \
    -exec ormolu -i \
    {} \+
